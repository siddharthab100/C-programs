  char str[10];
  while(intro==0)
{
  intro++;
  printf("Who do you want to go first? write 'me' for you or computer\n");
  scanf("%s",str);
  if( strcmp(str, "me") ||strcmp(str, "Me")||strcmp(str, "ME") == 0)
    player=0;
  elseif(strcmp(str, "computer")||strcmp(str, "Computer"))
    player = 1;
  else
    {
      printf("Enter valid first player ");
      intro--;   
    }
  
}
intro--;
 while(intro == 0)
{  intro++;
printf("Enter your mark\n");
  scanf("%c", mark);
if(mark!= 'x'||mark!= 'X'||mark!= 'O'||mark!= 'o')
  printf("Enter valid mark");
